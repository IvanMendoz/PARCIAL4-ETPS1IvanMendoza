<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarClienteVehiculo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFE1E1"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar vehiculo con un cliente"
            android:textSize="20sp"
            android:textColor="#252525"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cliente"
                android:textStyle="bold"
                android:textColor="#252525"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/edtCliente"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Seleccione..."
                android:inputType="textPersonName"
                android:textColor="#252525"
                android:textColorHint="#6C6C6C"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vehiculo"
                android:textStyle="bold"
                android:textColor="#252525"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/edtVehiculo"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Seleccione..."
                android:inputType="textPersonName"
                android:textColor="#252525"
                android:textColorHint="#6C6C6C"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Matricula"
                android:textStyle="bold"
                android:textColor="#252525"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/edtMatricula"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="P485-185"
                android:inputType="textPersonName"
                android:textColor="#252525"
                android:textColorHint="#6C6C6C"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kilometraje"
                android:textStyle="bold"
                android:textColor="#252525"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/edtKilometraje"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="75"
                android:inputType="numberSigned"
                android:textColor="#252525"
                android:textColorHint="#6C6C6C"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#237E19"
                android:text="Agregar"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:textSize="20sp" />

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Regresar a la lista"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:textSize="20sp"
                android:backgroundTint="#1D42C5"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>